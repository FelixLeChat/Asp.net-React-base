@using System
@using System.Globalization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>React - Base</title>

    <!-- project stylesheet -->
    <link rel="stylesheet" href="~/Content/scss/main.min.css"/>

    <!-- Setup language -->
    <script type="text/javascript">
        window.CurrentLanguage = "@CultureInfo.CurrentUICulture.TwoLetterISOLanguageName";
    </script>

</head>
<body>
    <div id="Header"></div>

    <div class="content container wrapper">
        @RenderBody()
    </div>

    <div id="Footer" ></div>

    <!-- Define external script to load on each pages-->
    <script src="https://fb.me/react-15.0.1.js"></script>
    <script src="https://fb.me/react-dom-15.0.1.js"></script>

    <script src="~/Content/js/Bundle/external-bundle.min.js"></script>

    <!-- Utilities Script -->
    <script src="~/Content/jsx/Bundle/react-components.min.jsx"></script>
</body>
</html>